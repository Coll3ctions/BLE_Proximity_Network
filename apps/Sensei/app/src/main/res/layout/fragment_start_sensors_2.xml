<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0.14"
        android:weightSum="1"
        android:layout_gravity="center|bottom|left|right|top"
        android:gravity="center_vertical|center_horizontal">


        <ImageButton
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:id="@+id/startSensors"
            android:src="@drawable/starttrim"
            android:textAlignment="center"
            android:cropToPadding="true"
            android:scaleType="fitStart"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="0dp"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:padding="0dp"
            android:background="#EAE0E0"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:baselineAlignBottom="false"
            android:clickable="true"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_gravity="center|bottom|left|right|top"
            android:longClickable="true"
            android:focusable="true" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Active Sensors"
        android:layout_marginLeft="0.05in"
        android:layout_marginTop="0.1in"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/checkboxList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxList2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxList3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1"></LinearLayout>





    </LinearLayout>

    <ScrollView
        android:id="@+id/svText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:text="" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>